@model IEnumerable<wow.Models.Instrument>

<div class="mt-3">
    <div class="row">
        <div class="col-6">
            <h2>Instruments</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Create" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Add New Instrument</a>
        </div>
    </div>
    <br>
    @if (Model.Count() > 0)
    {
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Image</th>
                    <th scope="col">Item</th>
                    <th scope="col">Type</th>
                    <th scope="col">Price</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                     <td width="25%"><img src="@item.ImagePath" width="70"></td>
                    <td width="25%">@item.Item.Name</td>
                    <td width="25%">@item.Type.Name</td>
                     <td width="25%">@item.Price</td>
                         
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary"><i class="fa-solid fa-pen-to-square"></i></a>
                            <form method="post" action="Delete">
                            <button onclick="if(!confirm('Are you sure you want to delete?')){return false}" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="fa-solid fa-trash"></i></button>
                 
                            </form>
                                 </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No Product exist.</p>
    }
</div>