@model wow.Models.ViewModels.InstrumentViewModel

<div class="mt-3">
    <div class="row">
        <div class="col-12">
            <h2>Edit Product Here</h2>
        </div>
    </div>

  
    <form method="post" enctype="multipart/form-data" >
    
  <input asp-for="Instrument.Id" hidden>
          <div class="form-group">

            <label asp-for="Items"></label>
            <select asp-for="Instrument.ItemId"asp-items="Model.selectListItem(Model.Items)" class="form-control"></select>
            
            <span asp-validation-for="Instrument.ItemId" class="text-danger"></span>
        </div>
          <div class="form-group">
            <label asp-for="Types"></label>
            <select asp-for="Instrument.TypeId"asp-items="Model.selectListType(Model.Types)" class="form-control"></select>
            
            <span asp-validation-for="Instrument.ItemId" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Instrument.Price"></label>
            <input asp-for="Instrument.Price" type="text" class="form-control">
            <span asp-validation-for="Instrument.Price" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input asp-for="Instrument.ImagePath" hidden>
            <label asp-for="Instrument.ImagePath"></label>
            <input asp-for="Instrument.ImagePath" type="file" name="files" class="form-control">
            <span asp-validation-for="Instrument.Price" class="text-danger"></span>
        </div>
        <input type="submit" class="btn btn-primary" value="Update"></input>
        <a asp-action="Index" class="btn btn-success">Back</a>
    </form>
</div>
